<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/question_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp" />


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenir_next_demi"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="This is a question "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />


                <RelativeLayout
                    android:id="@+id/answer_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_border_black"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/answer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center|left"
                        android:padding="8dp"
                        android:text="Option A"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                       android:fontFamily="@font/poppins"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/answer_lay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_border_black"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/answer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center|left"
                        android:padding="8dp"
                        android:text="Option B"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"/>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/answer_3lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_border_black"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/answer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center|left"
                        android:padding="8dp"
                        android:text="Option C"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/answer_4lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_border_black"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/answer4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center|left"
                        android:padding="8dp"
                        android:text="Option D"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins" />

                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</layout>