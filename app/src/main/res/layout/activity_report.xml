<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.quiz.ReportActivity">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_curve_bottom"
            android:minHeight="@dimen/_250sdp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Scholarship Test for Neet 2022"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_18ssp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.77">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@color/black"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="@color/colorHomeBg">

                            <TextView
                                android:id="@+id/reportBtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Report"
                                android:textColor="@color/colorTheme2"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="@color/colorHomeBg">

                            <TextView
                                android:id="@+id/overViewBtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Overview"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/overviewLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_question" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="Questions"
                                android:textColor="@color/gray_btn_bg_pressed_color"
                                android:textSize="@dimen/_13ssp" />

                            <TextView
                                android:id="@+id/totalQuestions"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="45"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/user" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="Duration"
                                android:textColor="@color/gray_btn_bg_pressed_color"
                                android:textSize="@dimen/_13ssp" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="45"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp">

                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_score" />

                            <TextView
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="Score"
                                android:textColor="@color/gray_btn_bg_pressed_color"
                                android:textSize="@dimen/_13ssp" />

                            <TextView
                                android:id="@+id/score"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="45"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reportLay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_completed" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Completed"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/completePersent"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_score" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Score"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/scoreTotal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_accuracy" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Accuracy"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/accuracyPercent"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_correct" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Correct"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/correctTotal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_skip" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Skipped"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/skippedTotal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ImageView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_wrong" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Wrong"
                                        android:textColor="@color/gray_btn_bg_pressed_color"
                                        android:textSize="@dimen/_13ssp" />

                                    <TextView
                                        android:id="@+id/wrongTotal"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="0.00 %"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_15ssp" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_200sdp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <!--https://play.google.com/store/apps/details?id=" + BuildConfig.APPLICATION_ID-->
            <TextView
                android:id="@+id/ViewSolution"
                style="@style/btnPrimary"
                android:text="View Solution" />

            <TextView
                android:id="@+id/shareScoreBtn"
                style="@style/btnPrimary"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Share Score" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>